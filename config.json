{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet",
        "args": {
            "num_blocks": [3, 4, 6, 3]
        }
    },
    "data_loader": { 
        "type": "IrisDataLoader",
        "args":{
            "batch_size": 3,
            "shuffle": false,
            "validation_split": 2,
            "num_workers": 2
        }
    },
    "dataset": {
        "type": "ImageDataset",
        "args":{
            "data_dir" : "data/"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
